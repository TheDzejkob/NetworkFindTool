<Window x:Class="NetworkFindTool.DiscoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Discover Switches" Height="560" Width="520" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="#232946" Icon="icon.ico">
    <Grid Margin="12" Background="#232946">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Start address:" Margin="0,0,8,8" VerticalAlignment="Center" Foreground="#fffffe" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="StartAddressTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" FontSize="16" VerticalContentAlignment="Center" Background="#b8c1ec" Foreground="#232946" FontWeight="DemiBold">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Label Grid.Row="1" Grid.Column="0" Content="Username:" Margin="0,0,8,8" VerticalAlignment="Center" Foreground="#fffffe" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" FontSize="16" VerticalContentAlignment="Center" Background="#b8c1ec" Foreground="#232946" FontWeight="DemiBold">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Label Grid.Row="2" Grid.Column="0" Content="Password:" Margin="0,0,8,8" VerticalAlignment="Center" Foreground="#fffffe" FontWeight="Bold" FontSize="14"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" FontSize="16" Background="#b8c1ec" Foreground="#232946">
            <PasswordBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </PasswordBox.Resources>
        </PasswordBox>

        <PasswordBox Visibility="Collapsed" x:Name="EnablePasswordBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8" FontSize="16" Background="#b8c1ec" Foreground="#232946">
            <PasswordBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </PasswordBox.Resources>
        </PasswordBox>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <Button x:Name="DiscoverButton" Content="Discover" Width="110" Height="36" Click="DiscoverButton_Click" Background="#eebbc3" Foreground="#232946" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="StatusText" Margin="12,6,0,0" Foreground="#b8c1ec" FontSize="14"/>
        </StackPanel>

        <ListBox x:Name="DevicesListBox" Grid.Row="5" Grid.ColumnSpan="2" Background="#232946" Foreground="#fffffe" BorderBrush="#b8c1ec" FontSize="16" MouseDoubleClick="DevicesListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="6">
                        <TextBlock Text="IP: " Foreground="#b8c1ec"/>
                        <TextBlock Text="{Binding Ip}" Width="160"/>
                        <TextBlock Text="Name: " Foreground="#b8c1ec" Margin="12,0,0,0"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="UseSelectedButton" Content="Use selected" Width="130" Height="34" Margin="0,0,8,0" Click="UseSelectedButton_Click" Background="#eebbc3" Foreground="#232946" FontWeight="Bold"/>
            <Button Content="Close" Width="90" Height="34" Click="CloseButton_Click" Background="#eebbc3" Foreground="#232946" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
