<Window x:Class="NetworkFindTool.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Switch Host Results" Height="400" Width="900" Background="#232946" Icon="icon.ico">
    <Window.Resources>
        <Style x:Key="CustomDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#b8c1ec"/>
            <Setter Property="Foreground" Value="#232946"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#232946"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Background="#232946">
        <DataGrid x:Name="ResultDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="10"
                  Background="#232946"
                  Foreground="#fffffe"
                  RowBackground="#232946"
                  AlternatingRowBackground="#2a2d3a"
                  GridLinesVisibility="None"
                  BorderBrush="#b8c1ec"
                  FontSize="16"
                  FontWeight="DemiBold"
                  ColumnHeaderHeight="32"
                  ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeader}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="4*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="4*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="4*"/>
                <DataGridTextColumn Header="IP Address" Binding="{Binding Ip}" Width="8*"/>
                <DataGridTextColumn Header="Age (mins)" Binding="{Binding Age}" Width="4*"/>
                <DataGridTextColumn Header="MAC Address" Binding="{Binding Mac}" Width="8*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
