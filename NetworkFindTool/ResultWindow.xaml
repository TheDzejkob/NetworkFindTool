<Window x:Class="NetworkFindTool.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Switch Host Results" Height="350" Width="600">
    <Grid>
        <DataGrid x:Name="ResultDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP Address" Binding="{Binding Ip}" Width="auto" />
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="Auto" />
                <DataGridTextColumn Header="MAC Address" Binding="{Binding Mac}" Width="auto" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="Auto" />
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
